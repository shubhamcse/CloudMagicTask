<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="?android:attr/selectableItemBackground"
    >
    <com.shubham.cloudmagictask.customView.CircleImageView
        android:id="@+id/contact_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/contacts"
      />

    <TextView
        android:id="@+id/textview_emailSender"
        android:layout_toRightOf="@+id/contact_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="55dp"
        android:textColor="@color/participant"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:id="@+id/textview_subject"
        android:layout_toRightOf="@+id/contact_image"
        android:layout_below="@+id/textview_emailSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="55dp"
        android:textColor="@color/subject"
        android:text=""/>
    <TextView
        android:id="@+id/textview_preview"
        android:layout_toRightOf="@+id/contact_image"
        android:layout_below="@+id/textview_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="55dp"
        android:textColor="@color/preview"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""/>
<TextView
    android:id="@+id/textview_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_below="@+id/textview_subject"
    android:layout_alignParentRight="true"
    android:paddingRight="4dp"
    android:textSize="12sp"
    android:text=""/>
    <ImageView
        android:id="@+id/imageview_isStarred"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/star_filed"
        android:tint="@color/unstarredEmailColor"

        />
</RelativeLayout>
